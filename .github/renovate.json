{
  "baseBranches": ["main"],
  "enabledManagers": ["npm", "github-actions"],
  "semanticCommits": "enabled",
  "semanticCommitScope": "",
  "semanticCommitType": "build",
  "commitBody": "See associated pull request for more information.",
  "schedule": [
    "after 11:00pm on the 1 day of the month",
    "before 4am on the 2 day of the month",
    "after 11:00pm on the 15 day of the month",
    "before 4am on the 16 day of the month"
  ],
  "timezone": "Europe/Vienna",
  "labels": ["dependencies"],
  "assignees": ["Dafnik"],
  "ignorePaths": ["**/libs/**"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "branch",
    "commitMessageAction": "lock file maintenance",
    "semanticCommitType": "build"
  },
  "packageRules": [
    {
      "groupName": "nx workspace",
      "enabled": false,
      "matchPackageNames": [
        "/^@angular//",
        "/^@nx//",
        "/^@angular-devkit//",
        "/nx/"
      ]
    },
    {
      "matchPackageNames": [
        "eslint",
        "@angular-eslint/{/,}**",
        "@typescript-eslint/{/,}**"
      ],
      "groupName": "eslint dependencies"
    },
    {
      "matchPackageNames": ["bootstrap"],
      "groupName": "bootstrap dependency"
    },
    {
      "matchPackageNames": ["typescript", "tslib"],
      "groupName": "typescript dependencies"
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "groupName": "minor-updates",
      "matchPackageNames": [
        "*",
        "!typescript",
        "!tslib",
        "!eslint",
        "!nx",
        "!bootstrap",
        "!/@angular-eslint//",
        "!/@typescript-eslint//",
        "!/^@angular//",
        "!/^@nx//",
        "!/^@angular-devkit//",
        "!/nx/"
      ]
    },
    {
      "matchUpdateTypes": ["major"],
      "groupName": "major-update"
    }
  ],
  "extends": [
    "config:recommended",
    ":pinVersions",
    "npm:unpublishSafe",
    ":prNotPending",
    ":preserveSemverRanges",
    ":rebaseStalePrs"
  ]
}
